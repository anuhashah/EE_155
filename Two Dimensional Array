/*Write pseudocode for an algorithm that fills the first and last column 
as well as the first and last row of a two-dimensional array of integers with â€“1.
*/

#include <iostream>
#include <array>

using namespace std;

const int MAX_ROWS = 3;
const int MAX_COLS = 4;

void print_array(string a[][MAX_COLS], int max_rows)
{
    int j = 0;
    int cols = MAX_COLS;
    int rows = max_rows;
    while(j < rows)
    {
        for(int i = 0; i < MAX_COLS; i++)
        {
            if(j == 0 || j == rows-1)
            {
                a[j][i] = "-1";
            }
            else if(i == 0 || i == cols-1)
            {
                a[j][i] = "-1";
            }
            else
            {
                a[j][i] = "  ";
            }
        }
        j++;
    }
}

int main()
{
    string array[MAX_ROWS][MAX_COLS];
    
    print_array(array, MAX_ROWS);
    
    for (int i = 0; i < MAX_ROWS; ++i)
    {
        for (int j = 0; j < MAX_COLS; ++j)
        {
            cout << array[i][j];
        }
        cout << endl;
    }
    
    return 0;
}
